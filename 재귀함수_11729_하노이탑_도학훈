#include<iostream>
using namespace std;
void hanoi(int n,int start, int to, int other) {
    if (n == 1) {
        cout << start << " " << to << "\n";
    }
    else {
        hanoi(n - 1, start, other, to);
        cout << start << " " << to << "\n";
        hanoi(n - 1, other, to, start);
    }
}
int main() {
    int n; //원판의 개수(1<=n<=20)
    cin >> n;
    cout << (((int)pow(2, n)) - 1)<<"\n";
    hanoi(n,1,3,2);
}
