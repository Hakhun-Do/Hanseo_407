#include<iostream>
using namespace std;
void hanoi(int n,int start, int to, int sub) {
    if (n == 1) cout << start << " " << to << "\n";
    else {
        hanoi(n - 1, start, sub, to);
        cout << start << " " << to << "\n";
        hanoi(n - 1, sub, to, start);
    }
}
int main() {
    int n;
    cin >> n;
    cout << (1 << n)-1 << "\n";
    hanoi(n, 1, 3, 2);
}
