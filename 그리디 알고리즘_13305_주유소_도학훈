//그리디 알고리즘_13305_주유소_도학훈
#include<iostream>
#include<vector>
using namespace std;
int main() {
	int N;//도시의 개수
	cin >> N;
	vector<int> road(N - 1);//도시를 연결하는 각 도로의 길이
	vector<int> oil(N);//도시 주유소 리터당 가격
	for (int i = 0; i < N - 1; i++) {
		cin >> road[i];
	}
	for (int i = 0; i < N; i++) {
		cin >> oil[i];
	}
	int price = oil[0];
	int sum = 0;//총 가격
	sum = price * road[0];
	for (int i = 1; i < N - 1; i++) {
		if (price > oil[i]) price = oil[i];
		sum = sum + (price * road[i]);
	}
	cout << sum;
}
